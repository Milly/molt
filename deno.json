{
  "tasks": {
    "run": "deno run --allow-env --allow-read --allow-write --allow-run --allow-net=deno.land",
    "cache": "deno cache ./lib/**/*.ts --lock",
    "lock": "deno task -q cache --lock-write && git add deno.lock",
    "test": "deno test -A",
    "test:fast": "deno task -q test --no-check",
    "dev": "deno fmt && deno lint && deno task lock && deno task test",
    "update": "deno task -q run ./cli.ts check lib/**/*.ts",
    "update:commit": "deno task -q run ./cli.ts update lib/**/*.ts --commit",
    "install": "deno install -f -A --name molt cli.ts"
  },
  "fmt": {
    "exclude": ["CHANGELOG.md"]
  },
  "lint": {
    "exclude": ["test/"],
    "rules": {
      "include": [
        "no-sync-fn-in-async-fn"
      ]
    }
  }
}
